{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.PowerPlatform.Dataverse.Client": "Information",
			"Api.Orders": "Debug"
		}
	},
	"AllowedHosts": "*",
	"ConnectionStrings": {
		"Dataverse": "${DATAVERSE_CONNECTION_STRING}"
	},
	"Cors": {
		"AllowedOrigins": [
			"https://localhost:3000",
			"http://localhost:3000"
		]
	},
	"ApplicationInsights": {
		"ConnectionString": ""
	},
	"ApiSettings": {
		"MaxPageSize": 100,
		"DefaultPageSize": 50,
		"EnableSwagger": true,
		"ValidationOptions": {
			"EnableStrictValidation": true,
			"AllowFutureOrderDates": true,
			"MaxFutureOrderDays": 30
		}
	}
}
